{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            "build/**"
        ]
    },
    "rules": {
        "semicolon": [
            false,
            "always"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "arrow-parens": false,
        "trailing-comma": false,
        "ordered-imports": false,
        "no-console": false,
        "interface-name": false,
        "object-literal-sort-keys": false,
        "no-var-requires": false,
        "no-shadowed-variable": [
            true,
            {
              "class": true,
              "enum": true,
              "function": true,
              "interface": false,
              "namespace": true,
              "typeAlias": false,
              "typeParameter": false,
              "underscore": false,
              "import": false
            }
          ]
    },
    "rulesDirectory": []
}